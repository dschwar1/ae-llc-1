                    <li class="has-dropdown">
                        <%= link_to current_user.email, "#" %>
                        <ul class="dropdown">
                        <li><%= link_to current_user.role, "#" %></li>
                        <li><%= link_to 'Logout', logout_path %></li>
                        </ul>
                    </li>
                <% else %>
                    <li><%= link_to 'Login', login_path %></li>
                <% end %>
            </ul>
        </section>
