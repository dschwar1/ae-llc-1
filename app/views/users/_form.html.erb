<%= simple_form_for @user, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>

    <%= f.input :email, input_html: {class: "avg"} %>
    <%= f.input :first_name, input_html: {class: "avg"} %>
    <%= f.input :last_name, input_html: {class: "avg"} %>
    <%= f.input :phone, input_html: {class: "avg"} %>
    <%= f.input :role, collection: User::ROLES, include_blank: true, input_html: {class: "avg"} %>
    <%= f.input :password, input_html: {class: "avg"} %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', home_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>